<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imgSearchUser"
        android:src="@drawable/ic_insta_profile_thin"
        app:civ_border_color="@color/gray_border"
        app:civ_border_width="1dp"
        app:civ_circle_background_color="@color/white"
        android:layout_width="64dp"
        android:layout_height="64dp" />
    
    <TextView
        android:id="@+id/txvSearchUsername"
        android:text="@string/username"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/imgSearchUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txvSearchName"
        style="@style/Theme.InstaApp.TextViewBase"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="16dp"
        android:id="@+id/txvSearchName"
        android:text="@string/username"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgSearchUser"
        app:layout_constraintTop_toBottomOf="@id/txvSearchUsername"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Theme.InstaApp.TextViewBase"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>